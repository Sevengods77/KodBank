{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(style.css|index.html|login.html|dashboard.html)",
            "dest": "/$1"
        },
        {
            "src": "/login",
            "dest": "/login.html"
        },
        {
            "src": "/dashboard",
            "dest": "/dashboard.html"
        },
        {
            "src": "/",
            "dest": "/index.html"
        }
    ]
}